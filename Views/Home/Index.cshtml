@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Configuration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@P1_EDD_DAVH_AFPE.Models.Data.Singleton.Instance.hashCapacity" class="control-label">Please indicate the maximum Length for the HashTable.</label>
                <input asp-for="@P1_EDD_DAVH_AFPE.Models.Data.Singleton.Instance.hashCapacity" class="form-control col-2" />
                <span asp-validation-for="@P1_EDD_DAVH_AFPE.Models.Data.Singleton.Instance.hashCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@P1_EDD_DAVH_AFPE.Models.Data.Singleton.Instance.heapCapacity" class="control-label">Please indicate the maximum attendance number of pacients.</label>
                <input asp-for="@P1_EDD_DAVH_AFPE.Models.Data.Singleton.Instance.heapCapacity" class="form-control col-2" />
                <span asp-validation-for="@P1_EDD_DAVH_AFPE.Models.Data.Singleton.Instance.heapCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@P1_EDD_DAVH_AFPE.Models.Data.Singleton.Instance.schedule" class="control-label">Please indicate the duration time of each medical appointment.</label>
                <input asp-for="@P1_EDD_DAVH_AFPE.Models.Data.Singleton.Instance.schedule" class="form-control col-2" />
                <span asp-validation-for="@P1_EDD_DAVH_AFPE.Models.Data.Singleton.Instance.schedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>