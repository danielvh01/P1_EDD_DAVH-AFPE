@model P1_EDD_DAVH_AFPE.Models.PacientModel

@{
    ViewData["Title"] = "NotAssist";
}

<h1>Porfavor, revise la información antes de marcar como inasistente</h1>
@using P1_EDD_DAVH_AFPE.Models.Data
<div>
    <h4>Datos del paciente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Apellido:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            DPI / Partida de nacimiento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DPI)
        </dd>
        <dt class="col-sm-2">
            Departamento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class="col-sm-2">
            Municipio:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.municipality)
        </dd>
        <dt class="col-sm-2">
            Prioridad:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.priority)
        </dd>
        <dt class="col-sm-2">
            Horario establecido anteriormente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.schedule)
        </dd>
        <dt class="col-sm-2">
            Nuevo Horario:
        </dt>
        <dd class="col-sm-10">
            @Singleton.Instance.NextDate(Singleton.Instance.HeapPacient.Length() - 1)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Reprogramar cita", "SReschedule") |
    <a asp-action="Simulation">Regresar a la Lista</a>
</div>
