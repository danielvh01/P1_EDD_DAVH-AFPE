@model IEnumerable<P1_EDD_DAVH_AFPE.Models.PacientModel>
@{
    ViewData["Title"] = "Simulation";
}

<h1>Simulation</h1>

<h2>Waiting List</h2>

<a asp-action="Create">Add person</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                DPI / Birthday Certificate
            </th>
            <th>
                Department
            </th>
            <th>
                Municipality
            </th>
            <th>
                Priority
            </th>
            <th>
                Schedule:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DPI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.municipality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.schedule)
                </td>
                <td>
                    @Html.ActionLink("Vaccinated", "Delete", new { item.DPI })
                    @Html.ActionLink("Did not assist", "Reschedule", new { item.DPI }) |                    
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index">Back to main menu</a>